<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.admin.quests.EditQuestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="30dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locationNameInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:hint="Nazwa lokacji"
            app:boxCornerRadiusBottomEnd="@dimen/dp_15"
            app:boxCornerRadiusBottomStart="@dimen/dp_15"
            app:boxCornerRadiusTopEnd="@dimen/dp_15"
            app:boxCornerRadiusTopStart="@dimen/dp_15"
            app:hintTextColor="@color/red_a30">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationNameInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locationDescriptionInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:hint="Opis"
            app:boxCornerRadiusBottomEnd="@dimen/dp_15"
            app:boxCornerRadiusBottomStart="@dimen/dp_15"
            app:boxCornerRadiusTopEnd="@dimen/dp_15"
            app:boxCornerRadiusTopStart="@dimen/dp_15"
            app:hintTextColor="@color/red_a30">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationDescriptionInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locationLatInputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:hint="Szerokość geograficzna"
            app:boxCornerRadiusBottomEnd="@dimen/dp_15"
            app:boxCornerRadiusBottomStart="@dimen/dp_15"
            app:boxCornerRadiusTopEnd="@dimen/dp_15"
            app:boxCornerRadiusTopStart="@dimen/dp_15"
            app:hintTextColor="@color/red_a30">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationLatInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locationLngInputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:hint="Długośc geograficzna"
            app:boxCornerRadiusBottomEnd="@dimen/dp_15"
            app:boxCornerRadiusBottomStart="@dimen/dp_15"
            app:boxCornerRadiusTopEnd="@dimen/dp_15"
            app:boxCornerRadiusTopStart="@dimen/dp_15"
            app:hintTextColor="@color/red_a30">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationLngInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/submitEditLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edytuj"
                android:layout_marginRight="10dp">
            </Button>
            <Button
                android:id="@+id/popBackButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anuluj"
                >
            </Button>
            <Button
                android:id="@+id/deleteLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuń"
                android:layout_marginLeft="10dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>